<a class="text-purple-500 bg-transparent border border-solid border-purple-500 hover:bg-purple-500 hover:text-white active:bg-purple-600 font-bold uppercase text-sm px-6 py-3 rounded mr-1 mb-1 ease-linear transition-all duration-150" type="button" href="/events/new">
  Crear nuevo evento
</a>
<div class="flex flex-col w-full mt-4">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-900 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-900">
          <thead class="bg-gray-800">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Event
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-full">
                Parties
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-gray-700 divide-y divide-gray-900">
            <% @events.each do |event| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to event_path(event) do %>
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <img class="h-10 w-10 rounded-full" src="https://i.imgur.com/Tm1HTIA.png" alt="">
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-100">
                          <%= event.name %>
                        </div>
                        <div class="text-sm text-gray-400">
                          <%= event.activity %>
                        </div>
                      </div>
                    </div>
                  <% end -%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if event.event_party %>
                    <a href="<%= party_path(event.event_party) %>" class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= event.event_party .title || event.event_party .event.name %>
                    </a>
                  <% end -%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <% if event.event_party %>
                    <%= link_to "Borrar parties", party_path(event.event_party), method: :delete, class: "text-gray-200 hover:text-purple-100 bg-red-800 rounded p-4",data: { confirm: "Estas seguro que deseas borrar esta party?" } %>
                  <% else %>
                    <a href="<%= new_party_path(event_id: event) %>" class="text-purple-500 hover:text-purple-100 bg-gray-900 rounded p-4">
                      Crear Party para este evento
                    </a>
                  <% end -%>
                </td>
              </tr>
            <% end -%>

            <!-- More people... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>